<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:id="@+id/personIcon"
            android:layout_width="0px"
            android:layout_height="300px"
            android:layout_marginTop="10px"
            android:src="@drawable/person1"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/ok"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20px"
            android:layout_weight="4">

            <TextView
                android:id="@+id/trName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TR Name"
                android:textStyle="bold"
                android:textSize="55px"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/nonFilerAs29May"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Non Filers as on 29th May"
                android:textStyle="bold"
                android:textSize="45px"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/mobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Major Commodity"
                android:textSize="45px"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/gstin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GSTIN"
                android:textSize="40px"/>

            <TextView
                android:id="@+id/division"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Division"
                android:textSize="40px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/callIcon"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:padding="15px"
                android:src="@drawable/phone"
                android:layout_marginBottom="10px"/>

            <ImageView
                android:id="@+id/reportDoneIcon"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:padding="25px"
                android:src="@drawable/report_done" />


            <ImageView
                android:id="@+id/reportPendingIcon"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:padding="25px"
                android:src="@drawable/report_pending" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>